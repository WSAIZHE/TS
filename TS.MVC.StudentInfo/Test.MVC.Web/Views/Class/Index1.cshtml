@model IEnumerable<Test.EF.DAL.Class>

@{
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @section styles
    {
        <style>
            h1 {
                color: red;
            }
        </style>
    }
    @section scripts{
        <script>
            $(document).ready(function () {
                //alert(1)
            });
        </script>
    }
</head>
<body>
    <h1>列表</h1>
    <p>
        @Html.ActionLink("新建", "Create")
    </p>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.ClassId }) |
                    @Html.ActionLink("详情", "Details", new { id = item.ClassId }) |
                    @Html.ActionLink("删除", "DelClass", new { id = item.ClassId }, new { onclick = "return confirm('你确定要删除吗？')" })
                </td>
            </tr>
        }
    </table>
</body>
</html>
